<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:id="@+id/booking_relative"
    >


    <ImageView
        android:id="@+id/rectshape2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/balance_value"
        android:src="@drawable/rectangle"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/wrapper_booking_linear"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/booking_relative1"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/booking_distance_text_view"
            android:id="@+id/bookDistanceTextView"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_toStartOf="@+id/bookDistanceUnit"
            />

        <TextView
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:id="@+id/bookDistanceUnit"
            android:layout_alignParentEnd="true"
            android:textSize="15sp"
            android:gravity="center"
            android:text="@string/booking_distance_unit_string"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/booking_relative2"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/booking_cost_text_view"
            android:id="@+id/bookCostTextView"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_toStartOf="@+id/bookCostUnit"
            />

        <TextView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:id="@+id/bookCostUnit"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:textSize="15sp"
            android:text="@string/booking_cost_unit_string"
            />

    </RelativeLayout>
</LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/booking_relative3"
        android:layout_below="@+id/wrapper_booking_linear"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/booking_submit_text_view"
            android:id="@+id/bookSubmitBtn"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#FF0000"
            android:background="#DBDBDB"
            />


    </RelativeLayout>


</RelativeLayout>