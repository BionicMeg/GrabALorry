<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/businessHistoryRelative">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="horizontal"
        android:id="@+id/historyHeader"
        >



        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/recordBook"
            android:gravity="center"
            android:background="#0067e1"
            android:textColor="#ffffff"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:id="@+id/history_book"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/recordBusiness"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="#DCDCDC"
            android:id="@+id/history_business"
            />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/business_record_recycler_view"
        android:layout_below="@+id/historyHeader"
        >
    </android.support.v7.widget.RecyclerView>


</RelativeLayout>